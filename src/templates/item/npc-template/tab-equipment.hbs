{{!-- NPC Template - Equipment Tab --}}
<section class="tab-content tab-equipment" data-tab="equipment" data-group="primary">
    {{!-- Weapons Section --}}
    <div class="rt-panel">
        <header class="rt-panel-header">
            <h3><i class="fas fa-sword"></i> {{localize "RT.NPC.Template.Weapons"}}</h3>
            <button type="button" class="rt-btn rt-btn-icon" data-action="addWeapon">
                <i class="fas fa-plus"></i>
            </button>
        </header>
        <div class="rt-panel-content">
            {{#if (gt system.weapons.length 0)}}
            <div class="weapons-list">
                <div class="weapon-header">
                    <span class="col-name">{{localize "RT.Name"}}</span>
                    <span class="col-damage">{{localize "RT.Weapon.Damage"}}</span>
                    <span class="col-pen">{{localize "RT.Weapon.Pen"}}</span>
                    <span class="col-range">{{localize "RT.Weapon.Range"}}</span>
                    <span class="col-rof">{{localize "RT.Weapon.RoF"}}</span>
                    <span class="col-special">{{localize "RT.Weapon.Special"}}</span>
                    <span class="col-actions"></span>
                </div>
                {{#each system.weapons as |weapon idx|}}
                <div class="weapon-row" data-index="{{idx}}">
                    <input type="text" name="system.weapons.{{idx}}.name" 
                           value="{{weapon.name}}" class="col-name" placeholder="{{localize 'RT.Weapon.Name'}}" />
                    <input type="text" name="system.weapons.{{idx}}.damage" 
                           value="{{weapon.damage}}" class="col-damage" placeholder="1d10+3" />
                    <input type="number" name="system.weapons.{{idx}}.pen" 
                           value="{{weapon.pen}}" class="col-pen" min="0" />
                    <input type="text" name="system.weapons.{{idx}}.range" 
                           value="{{weapon.range}}" class="col-range" placeholder="30m" />
                    <input type="text" name="system.weapons.{{idx}}.rof" 
                           value="{{weapon.rof}}" class="col-rof" placeholder="S/-/-" />
                    <input type="text" name="system.weapons.{{idx}}.special" 
                           value="{{weapon.special}}" class="col-special" placeholder="{{localize 'RT.Weapon.SpecialPlaceholder'}}" />
                    <div class="col-actions">
                        <button type="button" class="rt-btn rt-btn-icon rt-btn-danger" 
                                data-action="removeWeapon" data-index="{{idx}}">
                            <i class="fas fa-trash"></i>
                        </button>
                    </div>
                </div>
                {{/each}}
            </div>
            {{else}}
            <p class="empty-message">{{localize "RT.NPC.Template.NoWeapons"}}</p>
            {{/if}}
        </div>
    </div>
    
    {{!-- Armour Section --}}
    <div class="rt-panel">
        <header class="rt-panel-header">
            <h3><i class="fas fa-shield-alt"></i> {{localize "RT.NPC.Template.Armour"}}</h3>
        </header>
        <div class="rt-panel-content">
            <div class="armour-simple">
                <label>{{localize "RT.NPC.Template.BaseArmour"}}</label>
                <input type="number" name="system.baseArmour" value="{{system.baseArmour}}" min="0" />
            </div>
            
            <div class="armour-notes">
                <label>{{localize "RT.NPC.Template.ArmourNotes"}}</label>
                <input type="text" name="system.armourNotes" value="{{system.armourNotes}}" 
                       placeholder="{{localize 'RT.NPC.Template.ArmourNotesPlaceholder'}}" />
            </div>
        </div>
    </div>
    
    {{!-- Equipment Section --}}
    <div class="rt-panel">
        <header class="rt-panel-header">
            <h3><i class="fas fa-backpack"></i> {{localize "RT.NPC.Template.Equipment"}}</h3>
            <button type="button" class="rt-btn rt-btn-icon" data-action="addEquipment">
                <i class="fas fa-plus"></i>
            </button>
        </header>
        <div class="rt-panel-content">
            {{#if (gt system.equipment.length 0)}}
            <div class="equipment-list">
                {{#each system.equipment as |item idx|}}
                <div class="equipment-row" data-index="{{idx}}">
                    <input type="text" name="system.equipment.{{idx}}.name" 
                           value="{{item.name}}" placeholder="{{localize 'RT.Item.Name'}}" />
                    <input type="number" name="system.equipment.{{idx}}.quantity" 
                           value="{{item.quantity}}" min="1" class="quantity" />
                    <button type="button" class="rt-btn rt-btn-icon rt-btn-danger" 
                            data-action="removeEquipment" data-index="{{idx}}">
                        <i class="fas fa-trash"></i>
                    </button>
                </div>
                {{/each}}
            </div>
            {{else}}
            <p class="empty-message">{{localize "RT.NPC.Template.NoEquipment"}}</p>
            {{/if}}
        </div>
    </div>
</section>
