{{!-- Condition Chat Card --}}
<div class="rt-chat-card rt-condition-card rt-condition-card--{{nature}}">
  <header class="rt-card-header">
    <img src="{{img}}" alt="{{name}}" class="rt-card-icon" />
    <div class="rt-card-title-area">
      <h3 class="rt-card-title">{{name}}</h3>
      <div class="rt-card-subtitle">{{natureLabel}} Condition</div>
      <div class="rt-card-badges">
        <span class="rt-badge rt-badge--{{natureClass}}">
          <i class="fas {{natureIcon}}"></i> {{natureLabel}}
        </span>
        {{#if stackable}}
        <span class="rt-badge rt-badge--stacks">
          <i class="fas fa-layer-group"></i> Ã—{{stacks}}
        </span>
        {{/if}}
      </div>
    </div>
  </header>
  
  <div class="rt-card-body">
    <div class="rt-condition-meta">
      <span class="rt-meta-item rt-meta-item--applies">
        <i class="fas {{appliesToIcon}}"></i>
        {{appliesToLabel}}
      </span>
      {{#if isTemporary}}
      <span class="rt-meta-item rt-meta-item--duration">
        <i class="fas fa-clock"></i>
        {{durationDisplay}}
      </span>
      {{/if}}
    </div>
    
    {{#if effect}}
    <div class="rt-condition-effect">
      <h4>Effect</h4>
      {{{effect}}}
    </div>
    {{/if}}
    
    {{#if removal}}
    <div class="rt-condition-removal">
      <h4>Removal</h4>
      {{{removal}}}
    </div>
    {{/if}}
    
    {{#if notes}}
    <div class="rt-condition-notes">
      <strong>Notes:</strong> {{notes}}
    </div>
    {{/if}}
    
    {{#if description}}
    <div class="rt-condition-description">
      {{{description}}}
    </div>
    {{/if}}
  </div>
  
  {{#if sourceReference}}
  <footer class="rt-card-footer">
    <span class="rt-source-ref">
      <i class="fas fa-book"></i> {{sourceReference}}
    </span>
  </footer>
  {{/if}}
</div>
