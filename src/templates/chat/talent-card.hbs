{{!-- Rogue Trader Talent Chat Card --}}
<div class="rt-chat rt-talent-card">
    <div class="rt-card">
        {{!-- Header --}}
        <div class="rt-card-header rt-talent-header">
            <img class="rt-card-icon" src="{{talent.img}}" alt="{{talent.name}}" />
            <div class="rt-card-title-group">
                <h3 class="rt-card-title">{{talent.name}}</h3>
                <div class="rt-card-badges">
                    <span class="rt-badge rt-badge-tier {{tierColor talent.tier}}">
                        <i class="fas fa-layer-group"></i> {{talent.tierLabel}}
                    </span>
                    <span class="rt-badge rt-badge-category">
                        <i class="fas {{talentIcon talent.category}}"></i> {{talent.category}}
                    </span>
                    {{#if talent.isPassive}}
                    <span class="rt-badge rt-badge-passive">
                        <i class="fas fa-circle"></i> Passive
                    </span>
                    {{else}}
                    <span class="rt-badge rt-badge-active">
                        <i class="fas fa-bolt"></i> Active
                    </span>
                    {{/if}}
                </div>
            </div>
        </div>
        
        {{!-- Body --}}
        <div class="rt-card-body">
            {{!-- Prerequisites Section --}}
            {{#if talent.hasPrerequisites}}
            <div class="rt-card-section rt-prerequisites">
                <h4 class="rt-section-title">
                    <i class="fas fa-tasks"></i> Prerequisites
                </h4>
                <div class="rt-section-content">
                    {{talent.prerequisitesLabel}}
                </div>
            </div>
            {{/if}}
            
            {{!-- Benefit Section --}}
            <div class="rt-card-section rt-benefit">
                <h4 class="rt-section-title">
                    <i class="fas fa-star"></i> Benefit
                </h4>
                <div class="rt-section-content rt-benefit-text">
                    {{{talent.benefit}}}
                </div>
            </div>
            
            {{!-- Specialization (if present) --}}
            {{#if talent.specialization}}
            <div class="rt-card-section rt-specialization">
                <h4 class="rt-section-title">
                    <i class="fas fa-tag"></i> Specialization
                </h4>
                <div class="rt-section-content">
                    {{talent.specialization}}
                    {{#if talent.stackable}}
                    {{#if talent.rank}}
                    <span class="rt-rank">(Rank {{talent.rank}})</span>
                    {{/if}}
                    {{/if}}
                </div>
            </div>
            {{/if}}
        </div>
        
        {{!-- Footer --}}
        <div class="rt-card-footer rt-talent-footer">
            <div class="rt-footer-row">
                {{#if talent.aptitudes.length}}
                <div class="rt-footer-item">
                    <strong>Aptitudes:</strong>
                    <div class="rt-aptitudes-list">
                        {{#each talent.aptitudes as |apt|}}
                        <span class="rt-badge rt-badge-aptitude">{{apt}}</span>
                        {{/each}}
                    </div>
                </div>
                {{/if}}
                
                <div class="rt-footer-item">
                    <strong>Cost:</strong> {{talent.costLabel}}
                </div>
            </div>
            
            <div class="rt-footer-timestamp">
                <i class="far fa-clock"></i> {{timestamp}}
            </div>
        </div>
    </div>
</div>
