{{!-- Origin Roll Chat Card Template --}}
<div class="origin-roll-card chat-card">

    {{!-- Header --}}
    <div class="card-header">
        <div class="header-left">
            <img src="{{actorImg}}" alt="{{actor}}" class="actor-portrait" />
            <div class="header-info">
                <h3 class="actor-name">{{actor}}</h3>
                <p class="origin-name">
                    <i class="fa-solid fa-scroll"></i>
                    {{origin}}
                </p>
            </div>
        </div>
        <div class="header-right">
            <div class="roll-type-icon {{rollType}}">
                <i class="fa-solid {{#if (eq rollType 'wounds')}}fa-heart{{else}}fa-star{{/if}}"></i>
            </div>
        </div>
    </div>

    {{!-- Roll Title --}}
    <div class="card-title">
        <h4>Rolling for {{rollTypeLabel}}</h4>
        <span class="timestamp">{{timestamp}}</span>
    </div>

    {{!-- Formula --}}
    <div class="card-formula">
        <label>Formula:</label>
        <code>{{formula}}</code>
    </div>

    {{!-- Result --}}
    <div class="card-result {{rollType}}">
        <div class="result-value">
            <span class="result-number">{{result}}</span>
            <span class="result-label">{{rollTypeLabel}}</span>
        </div>
        <div class="result-breakdown">
            <i class="fa-solid fa-calculator"></i>
            <span>{{breakdown}}</span>
        </div>
    </div>

    {{!-- Footer --}}
    <div class="card-footer">
        <p class="flavor-text">
            {{#if (eq rollType 'wounds')}}
                <i class="fa-solid fa-shield-heart"></i>
                Added to character's starting Wounds
            {{else}}
                <i class="fa-solid fa-hand-sparkles"></i>
                Fate guides your path through the void
            {{/if}}
        </p>
    </div>

</div>

