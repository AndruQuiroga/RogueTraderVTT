{{!-- Rogue Trader Ship Weapon Fire Card - Modern Design --}}
<div class="rt-chat">
    <div class="rt-item-card rt-item-card--weapon">
        {{!-- Header --}}
        <div class="rt-item-card__header">
            <img class="rt-item-card__image" src="{{weapon.img}}" alt="{{weapon.name}}" />
            <div class="rt-item-card__title-group">
                <h2 class="rt-item-card__name">{{weapon.name}}</h2>
                <span class="rt-item-card__type">{{weapon.system.weaponType}} â€¢ {{weapon.system.location}}</span>
            </div>
        </div>
        
        {{!-- Body --}}
        <div class="rt-item-card__body">
            <div class="rt-item-card__stats">
                <div class="rt-item-card__stat">
                    <span class="rt-item-card__stat-name">Strength</span>
                    <span class="rt-item-card__stat-value">{{weapon.system.strength}}</span>
                </div>
                <div class="rt-item-card__stat">
                    <span class="rt-item-card__stat-name">Damage</span>
                    <span class="rt-item-card__stat-value">{{weapon.system.damage}}</span>
                </div>
                <div class="rt-item-card__stat">
                    <span class="rt-item-card__stat-name">Crit Rating</span>
                    <span class="rt-item-card__stat-value">{{weapon.system.critRating}}</span>
                </div>
                <div class="rt-item-card__stat">
                    <span class="rt-item-card__stat-name">Range</span>
                    <span class="rt-item-card__stat-value">{{weapon.system.range}}</span>
                </div>
            </div>

            {{#if weapon.system.special}}
                <div class="rt-item-card__field">
                    <span class="rt-item-card__label">Special</span>
                    <span class="rt-item-card__value">{{weapon.system.special}}</span>
                </div>
            {{/if}}
        </div>
        
        {{!-- Actions --}}
        <div class="rt-item-card__actions">
            <button class="rt-item-card__btn rt-item-card__btn--attack rt-ship-attack-roll" data-weapon-id="{{weapon._id}}" data-crew-rating="{{crewRating}}">
                <span class="material-icons">casino</span>
                Hit (Crew: {{crewRating}})
            </button>
            <button class="rt-item-card__btn rt-item-card__btn--damage rt-ship-damage-roll" data-damage="{{weapon.system.damage}}" data-strength="{{weapon.system.strength}}">
                <span class="material-icons">whatshot</span>
                Damage
            </button>
        </div>
    </div>
</div>
