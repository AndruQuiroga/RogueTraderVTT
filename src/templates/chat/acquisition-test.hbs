<div class="acquisition-test-result">
    <h3>{{actor.name}} - Profit Factor Acquisition</h3>
    {{#if item}}
    <p><strong>Item:</strong> {{item.name}}</p>
    {{/if}}
    <p><strong>Roll:</strong> {{roll}} vs {{target}}</p>
    {{#if success}}
    <p class="success"><i class="fas fa-check-circle"></i> <strong>SUCCESS</strong> ({{dos}} DoS)</p>
    {{else}}
    <p class="failure"><i class="fas fa-times-circle"></i> <strong>FAILURE</strong> ({{dos}} DoF)</p>
    {{/if}}
</div>
