<div class="rt-chat-card rt-ritual-roll">
    <header class="card-header flexrow">
        <img class="item-image" src="{{item.img}}" alt="{{item.name}}"/>
        <h3 class="item-name">{{item.name}}</h3>
        <span class="roll-type">Ritual</span>
    </header>

    <section class="card-content">
        <div class="roll-result {{#if success}}success{{else}}failure{{/if}}">
            <div class="roll-dice">
                <span class="roll-total">{{roll.total}}</span>
                <span class="roll-vs">vs</span>
                <span class="target-value">{{targetValue}}</span>
            </div>
            <div class="result-text">
                {{#if success}}
                <span class="success-text"><i class="fas fa-pray"></i> Ritual Complete!</span>
                {{else}}
                <span class="failure-text"><i class="fas fa-skull"></i> Ritual Failed!</span>
                {{/if}}
                <span class="degrees">({{degrees}} Degrees)</span>
            </div>
        </div>

        {{#if item.system.description}}
        <div class="ritual-description">
            {{{item.system.description}}}
        </div>
        {{/if}}

        {{#if item.system.effect}}
        <div class="ritual-effect">
            <strong>Effect:</strong> {{{item.system.effect}}}
        </div>
        {{/if}}

        {{#if item.system.duration}}
        <div class="ritual-duration">
            <strong>Duration:</strong> {{item.system.duration}}
        </div>
        {{/if}}
    </section>

    <footer class="card-footer">
        <span class="actor-name">{{actor}}</span>
    </footer>
</div>
