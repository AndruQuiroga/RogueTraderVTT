{{!-- Origin Path Panel - Rogue Trader Character Creation --}}
<div class="rt-panel spacer rt-grid-col-6 rt-grid-row-1">
    <h1 class="rt-panel-header">{{localize "RT.OriginPath.Header"}}</h1>
    <p class="rt-origin-description">{{localize "RT.OriginPath.Description"}}</p>
    
    <div class="rt-origin-path-container">
        {{#each originPathSteps as |step|}}
        <div class="rt-origin-step {{#if step.item}}rt-origin-step--filled{{/if}}" data-step="{{step.key}}">
            <div class="rt-origin-step-header">
                <span class="rt-origin-step-number">{{@index}}</span>
                <span class="rt-origin-step-label">{{step.label}}</span>
            </div>
            <div class="rt-origin-step-content" data-step-key="{{step.key}}" data-choice-group="{{step.choiceGroup}}">
                {{#if step.item}}
                    <div class="rt-origin-item" data-item-id="{{step.item._id}}">
                        <img class="rt-origin-item-img" src="{{step.item.img}}" alt="{{step.item.name}}" />
                        <div class="rt-origin-item-info">
                            <span class="rt-origin-item-name item-name" data-item-id="{{step.item._id}}">{{step.item.name}}</span>
                        </div>
                        <a class="rt-origin-item-delete item-delete" data-item-id="{{step.item._id}}" title="{{localize 'RT.OriginPath.Remove'}}">
                            <span class="material-icons">close</span>
                        </a>
                    </div>
                {{else}}
                    <div class="rt-origin-dropzone">
                        <span class="material-icons rt-dropzone-icon">add_circle_outline</span>
                        <span class="rt-dropzone-text">{{localize "RT.OriginPath.DropHere"}}</span>
                    </div>
                {{/if}}
            </div>
        </div>
        {{/each}}
    </div>
</div>

{{!-- Origin Path Effects Summary --}}
<div class="rt-panel spacer rt-grid-col-6 rt-grid-row-2">
    <h1 class="rt-panel-header">{{localize "RT.OriginPath.EffectsHeader"}}</h1>
    {{#if actor.backgroundEffects.abilities.length}}
        <div class="rt-effects-list">
            {{#each actor.backgroundEffects.abilities as |ability|}}
                <div class="rt-effect-card">
                    <div class="rt-effect-header">
                        <span class="rt-effect-source">{{ability.source}}</span>
                        <span class="rt-effect-name">{{ability.name}}</span>
                    </div>
                    <div class="rt-effect-body">
                        <p class="rt-effect-benefit">{{ability.benefit}}</p>
                    </div>
                </div>
            {{/each}}
        </div>
    {{else}}
        <div class="rt-origin-empty">
            <span class="material-icons rt-empty-icon">info</span>
            <p>{{localize "RT.OriginPath.NoEffects"}}</p>
        </div>
    {{/if}}
</div>
