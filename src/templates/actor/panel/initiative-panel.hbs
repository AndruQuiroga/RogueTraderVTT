<div class="rt-panel rt-initiative-panel">
    <div class="rt-panel-header">
        <span class="rt-panel-title"><i class="fas fa-stopwatch"></i> Initiative</span>
    </div>
    <div class="rt-panel-body">
        <div class="rt-vital-edit-grid">
            <label class="rt-vital-edit-field">
                <span class="rt-edit-label">Roll Formula</span>
                <input type="text" class="rt-vital-input" name="system.initiative.base" value="{{actor.initiative.base}}" placeholder="1d10" />
            </label>
            <label class="rt-vital-edit-field">
                <span class="rt-edit-label">Characteristic</span>
                <select class="rt-vital-input" name="system.initiative.characteristic">
                    {{selectOptions dh.combat.characteristics selected=actor.initiative.characteristic}}
                </select>
            </label>
        </div>
    </div>
</div>
