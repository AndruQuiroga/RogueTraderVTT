<div class="dh-panel dh-grid-col-3 dh-grid-row-2 rt-specialist-skills-panel">
    <div class="dh-table--border dh-skilltable--border">
        <h1 class="dh-panel__header">Specialist Skills</h1>
        <div class="table-row--head rt-skills-header">
            <div class="table-cell rt-skill-name">Specialization</div>
            <div class="table-cell rt-skill-char">Char</div>
            <div class="table-cell rt-skill-trained">Basic</div>
            <div class="table-cell rt-skill-trained">Trained</div>
            <div class="table-cell rt-skill-trained">+10</div>
            <div class="table-cell rt-skill-trained">+20</div>
            <div class="table-cell rt-skill-bonus">Bonus</div>
            <div class="table-cell--last rt-skill-total">Total</div>
        </div>
        {{#each skillLists.specialist as |entry|}}
            <div class="table-row--grouped rt-specialist-group">
                <div class="table-cell--grouped rt-specialist-group-name">
                    <span class="rt-group-label">{{entry.[1].label}}</span>
                </div>
                <div class="table-cell--last rt-specialist-add">
                    <button class="dh-settings__label--add add-skill rt-add-specialization" data-skill="{{entry.[0]}}" title="Add {{entry.[1].label}} specialization">
                        <i class="fas fa-plus-circle"></i> Add
                    </button>
                </div>
            </div>
            {{#if entry.[1].entries.length}}
                {{#each entry.[1].entries as |speciality idx|}}
                    <div class="table-row actor-drag rt-specialist-row" data-item-type="skill" data-item-id="{{../entry.[0]}}" data-speciality="{{idx}}">
                        <div class="table-cell rt-skill-name rt-specialist-name">
                            <input type="text" name="system.skills.{{../entry.[0]}}.entries.{{idx}}.name" value="{{speciality.name}}" class="rt-specialization-input" placeholder="Enter specialization..." />
                            <button class="roll-skill rt-skill-button" data-skill="{{../entry.[0]}}" data-specialty="{{idx}}" type="roll" title="Roll {{../entry.[1].label}}: {{speciality.name}}">
                                <i class="fas fa-dice-d20"></i>
                            </button>
                        </div>
                        <div class="table-cell rt-skill-char">
                            <select name="system.skills.{{../entry.[0]}}.entries.{{idx}}.characteristic" class="rt-char-select">
                                {{selectOptions ../../skillCharacteristicOptions selected=speciality.characteristic}}
                            </select>
                        </div>
                        <div class="table-cell rt-skill-training">
                            <input type="checkbox" name="system.skills.{{../entry.[0]}}.entries.{{idx}}.basic" data-dtype="Boolean" {{checked speciality.basic}} title="Basic" />
                        </div>
                        <div class="table-cell rt-skill-training">
                            <input type="checkbox" name="system.skills.{{../entry.[0]}}.entries.{{idx}}.trained" data-dtype="Boolean" {{checked speciality.trained}} title="Trained" />
                        </div>
                        <div class="table-cell rt-skill-training">
                            <input type="checkbox" name="system.skills.{{../entry.[0]}}.entries.{{idx}}.plus10" data-dtype="Boolean" {{checked speciality.plus10}} title="+10" />
                        </div>
                        <div class="table-cell rt-skill-training">
                            <input type="checkbox" name="system.skills.{{../entry.[0]}}.entries.{{idx}}.plus20" data-dtype="Boolean" {{checked speciality.plus20}} title="+20" />
                        </div>
                        <div class="table-cell rt-skill-bonus">
                            <input type="number" data-dtype="Number" name="system.skills.{{../entry.[0]}}.entries.{{idx}}.bonus" value="{{speciality.bonus}}" class="rt-bonus-input" />
                        </div>
                        <div class="table-cell--last table-cell--highlight rt-skill-total">
                            <span class="display rt-total-value">{{speciality.current}}</span>
                        </div>
                    </div>
                {{/each}}
            {{else}}
                <div class="table-row rt-no-specializations">
                    <div class="table-cell--grouped rt-empty-message">
                        <i class="fas fa-info-circle"></i> Click "Add" to create a {{entry.[1].label}} specialization
                    </div>
                </div>
            {{/if}}
        {{/each}}
    </div>
</div>
