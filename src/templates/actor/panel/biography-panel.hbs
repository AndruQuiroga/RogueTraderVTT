<div class="rt-panel rt-biography-panel spacer rt-grid-col-6 rt-grid-row-1">
    <h1 class="rt-panel-header">{{localize "RT.Biography.Header"}}</h1>
    <div class="rt-bio-grid">
        <div class="rt-bio-field">
            <span class="rt-bio-label">{{localize "RT.Biography.Gender"}}</span>
            <input class="rt-bio-input" name="system.bio.gender" type="text" value="{{system.bio.gender}}" placeholder="—" />
        </div>
        <div class="rt-bio-field">
            <span class="rt-bio-label">{{localize "RT.Biography.Age"}}</span>
            <input class="rt-bio-input" name="system.bio.age" type="text" value="{{system.bio.age}}" placeholder="—" />
        </div>
        <div class="rt-bio-field">
            <span class="rt-bio-label">{{localize "RT.Biography.Build"}}</span>
            <input class="rt-bio-input" name="system.bio.build" type="text" value="{{system.bio.build}}" placeholder="—" />
        </div>
        <div class="rt-bio-field">
            <span class="rt-bio-label">{{localize "RT.Biography.Complexion"}}</span>
            <input class="rt-bio-input" name="system.bio.complexion" type="text" value="{{system.bio.complexion}}" placeholder="—" />
        </div>
        <div class="rt-bio-field rt-bio-field--span-2">
            <span class="rt-bio-label">{{localize "RT.Biography.Hair"}}</span>
            <input class="rt-bio-input" name="system.bio.hair" type="text" value="{{system.bio.hair}}" placeholder="—" />
        </div>
        <div class="rt-bio-field rt-bio-field--span-2">
            <span class="rt-bio-label">{{localize "RT.Biography.Quirks"}}</span>
            <input class="rt-bio-input" name="system.bio.quirks" type="text" value="{{system.bio.quirks}}" placeholder="—" />
        </div>
        <div class="rt-bio-field rt-bio-field--span-4">
            <span class="rt-bio-label">{{localize "RT.Biography.Superstition"}}</span>
            <input class="rt-bio-input" name="system.bio.superstition" type="text" value="{{system.bio.superstition}}" placeholder="—" />
        </div>
        <div class="rt-bio-field rt-bio-field--span-4">
            <span class="rt-bio-label">{{localize "RT.Biography.Mementos"}}</span>
            <input class="rt-bio-input" name="system.bio.mementos" type="text" value="{{system.bio.mementos}}" placeholder="—" />
        </div>
        <div class="rt-bio-field rt-bio-field--full">
            <span class="rt-bio-label">{{localize "RT.Biography.Notes"}}</span>
            <textarea class="rt-bio-textarea" name="system.bio.notes" rows="5" placeholder="Personal notes, background, history...">{{system.bio.notes}}</textarea>
        </div>
    </div>
</div>
