<div class="rt-panel rt-grid-col-4">
    <div class="rt-panel-header">
        <span class="rt-panel-title"><i class="fas fa-sword"></i> Weapons</span>
    </div>
    <div class="rt-panel-body">
        <div class="rt-table--border rt-weapontable--border">
        <div class="table-row--head">
            <div class="table-cell--span2">Name</div>
            <div class="table-cell">Class</div>
            <div class="table-cell">Type</div>
            <div class="table-cell">Equipped</div>
            <div class="table-cell--last">
                <label class="rt-control-button" data-action="itemCreate" data-type="weapon">
                    <span class="rt-control-button__span material-icons">{{defaultVal icon 'add_circle'}}</span>
                </label>
            </div>
        </div>
        {{#each actor.items as | item |}}
            {{#if item.isWeapon}}
                <div class="table-row item-drag" data-item-id="{{item.id}}" data-item-type="weapon">
                    <div class="table-cell--settingstoggle">
                        <label class="rt-control-button item-edit" data-item-id="{{item.id}}">
                            <span class="rt-control-button__span material-icons">{{defaultVal icon 'settings'}}</span>
                        </label>
                    </div>
                    <div class="table-cell--left">
                        {{> systems/rogue-trader/templates/actor/partial/trait-toggle.hbs toggle=(concat 'description_' item.id) text=item.name}}
                    </div>
                    <div class="table-cell">
                        <span class="display">{{item.system.class}}</span>
                    </div>
                    <div class="table-cell">
                        <span class="display">{{item.system.type}}</span>
                    </div>
                    <div class="table-cell">
                        <span class="display">{{item.system.equipped}}</span>
                    </div>
                    <div class="table-cell--last">
                        <label class="rt-control-button item-roll" data-item-id="{{item.id}}">
                            <span class="rt-control-button__span material-icons">{{defaultVal icon 'casino'}}</span>
                        </label>
                        <label class="rt-control-button item-damage" data-item-id="{{item.id}}">
                            <span class="rt-control-button__span material-icons">{{defaultVal icon 'bolt'}}</span>
                        </label>
                        <label class="rt-control-button item-delete" data-item-id="{{item.id}}">
                            <span class="rt-control-button__span material-icons">{{defaultVal icon 'delete'}}</span>
                        </label>
                    </div>
                    <div class="table-cell--description description_{{item.id}}" {{hideIfNot
                        (isExpanded (concat 'description_' item.id ))}}>
                        <div class="rt-settings">
                            <div class="rt-field__wrapper">
                                <span class="rt-field__header">Damage</span>
                                <span class="rt-field__span">{{item.system.damageLabel}}</span>
                            </div>
                            <div class="rt-field__wrapper">
                                <span class="rt-field__header">Pen</span>
                                <span class="rt-field__span">{{item.system.damage.penetration}}</span>
                            </div>
                            <div class="rt-field__wrapper">
                                <span class="rt-field__header">Range</span>
                                <span class="rt-field__span">{{item.system.rangeLabel}}</span>
                            </div>
                            <div class="rt-field__wrapper">
                                <span class="rt-field__header">ROF (S/B/F)</span>
                                <span class="rt-field__span">{{item.system.rateOfFireLabel}}</span>
                            </div>
                            <div class="rt-field__wrapper">
                                <span class="rt-field__header">Clip</span>
                                <span class="rt-field__span">{{item.system.clip.value}} / {{item.system.clip.max}}</span>
                            </div>
                            <div class="rt-field__wrapper">
                                <span class="rt-field__header">Reload</span>
                                <span class="rt-field__span">{{item.system.reload}}</span>
                            </div>
                            <div class="rt-field__wrapper">
                                <span class="rt-field__header">Special</span>
                                <span class="rt-field__span">{{specialDisplay item.system.special}}</span>
                            </div>
                        </div>
                    </div>
                </div>
            {{/if}}
        {{/each}}
        </div>
    </div>
</div>
