<div class="rt-panel spacer rt-grid-col-3">
    <h1 class="rt-panel-header">
        <i class="fas fa-shield-alt"></i>
        {{localize "RT.Vehicle.Armour"}}
    </h1>
    <div class="rt-vehicle-armour-grid">
        <div class="rt-armour-facing">
            <span class="rt-field__header">{{localize "RT.Vehicle.Armour.Front"}}</span>
            <div class="rt-field__wrapper">
                <input type="number" data-dtype="Number" class="rt-field__input" 
                       name="system.armour.front.value" value="{{actor.system.armour.front.value}}" 
                       placeholder="0" />
                <input type="text" class="rt-field__input rt-field__descriptor" 
                       name="system.armour.front.descriptor" value="{{actor.system.armour.front.descriptor}}" 
                       placeholder="Descriptor" />
            </div>
        </div>
        <div class="rt-armour-facing">
            <span class="rt-field__header">{{localize "RT.Vehicle.Armour.Side"}}</span>
            <div class="rt-field__wrapper">
                <input type="number" data-dtype="Number" class="rt-field__input" 
                       name="system.armour.side.value" value="{{actor.system.armour.side.value}}" 
                       placeholder="0" />
                <input type="text" class="rt-field__input rt-field__descriptor" 
                       name="system.armour.side.descriptor" value="{{actor.system.armour.side.descriptor}}" 
                       placeholder="Descriptor" />
            </div>
        </div>
        <div class="rt-armour-facing">
            <span class="rt-field__header">{{localize "RT.Vehicle.Armour.Rear"}}</span>
            <div class="rt-field__wrapper">
                <input type="number" data-dtype="Number" class="rt-field__input" 
                       name="system.armour.rear.value" value="{{actor.system.armour.rear.value}}" 
                       placeholder="0" />
                <input type="text" class="rt-field__input rt-field__descriptor" 
                       name="system.armour.rear.descriptor" value="{{actor.system.armour.rear.descriptor}}" 
                       placeholder="Descriptor" />
            </div>
        </div>
    </div>
    <div class="rt-armour-summary">
        <strong>Summary:</strong> {{actor.system.armourSummary}}
    </div>
</div>
