{{!-- Modern Compact Movement Panel for Combat Tab --}}
{{!-- Sleek, dense design with visual hierarchy --}}

<div class="rt-panel rt-panel-movement-compact">
    <div class="rt-panel-header">
        <span class="rt-panel-title"><i class="fas fa-running"></i> Movement</span>
    </div>
    <div class="rt-panel-body">
        <div class="rt-movement-modern-compact">
            {{!-- Half Move --}}
            <div class="rt-move-modern-cell rt-move-half">
                <div class="rt-move-modern-icon">
                    <i class="fas fa-walking"></i>
                </div>
                <div class="rt-move-modern-content">
                    <span class="rt-move-modern-label">Half</span>
                    <span class="rt-move-modern-value">{{system.movement.half}}<span class="rt-move-unit">m</span></span>
                </div>
                <div class="rt-move-modern-bar" style="--move-percent: 25%;"></div>
            </div>

            {{!-- Full Move --}}
            <div class="rt-move-modern-cell rt-move-full">
                <div class="rt-move-modern-icon">
                    <i class="fas fa-shoe-prints"></i>
                </div>
                <div class="rt-move-modern-content">
                    <span class="rt-move-modern-label">Full</span>
                    <span class="rt-move-modern-value">{{system.movement.full}}<span class="rt-move-unit">m</span></span>
                </div>
                <div class="rt-move-modern-bar" style="--move-percent: 50%;"></div>
            </div>

            {{!-- Charge --}}
            <div class="rt-move-modern-cell rt-move-charge">
                <div class="rt-move-modern-icon">
                    <i class="fas fa-running"></i>
                </div>
                <div class="rt-move-modern-content">
                    <span class="rt-move-modern-label">Charge</span>
                    <span class="rt-move-modern-value">{{system.movement.charge}}<span class="rt-move-unit">m</span></span>
                </div>
                <div class="rt-move-modern-bar" style="--move-percent: 75%;"></div>
            </div>

            {{!-- Run --}}
            <div class="rt-move-modern-cell rt-move-run">
                <div class="rt-move-modern-icon">
                    <i class="fas fa-wind"></i>
                </div>
                <div class="rt-move-modern-content">
                    <span class="rt-move-modern-label">Run</span>
                    <span class="rt-move-modern-value">{{system.movement.run}}<span class="rt-move-unit">m</span></span>
                </div>
                <div class="rt-move-modern-bar" style="--move-percent: 100%;"></div>
            </div>
        </div>
    </div>
</div>
