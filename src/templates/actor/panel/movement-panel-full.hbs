{{!-- Mobility Panel - Clean, Modern Design --}}

<div class="rt-panel rt-panel-mobility">
    <div class="rt-panel-header rt-panel-header--clickable sheet-control__hide-control"
         data-toggle="mobility_details"
         title="Click to {{#if (isExpanded 'mobility_details' actor)}}collapse{{else}}expand{{/if}}">
        <span class="rt-panel-title">
            <i class="fas fa-person-running"></i> Mobility
        </span>
        <i class="fas fa-chevron-down rt-panel-chevron {{#if (isExpanded 'mobility_details' actor)}}rt-panel-chevron--open{{/if}}"></i>
    </div>

    <div class="rt-panel-body">
        
        {{!-- Movement Speeds - Always Visible --}}
        <div class="rt-mobility-speeds">
            <div class="rt-speed-box rt-speed-half">
                <i class="fas fa-walking"></i>
                <div class="rt-speed-data">
                    <span class="rt-speed-value">{{system.movement.half}}</span>
                    <span class="rt-speed-unit">m</span>
                </div>
                <span class="rt-speed-label">Half</span>
            </div>
            
            <div class="rt-speed-box rt-speed-full">
                <i class="fas fa-shoe-prints"></i>
                <div class="rt-speed-data">
                    <span class="rt-speed-value">{{system.movement.full}}</span>
                    <span class="rt-speed-unit">m</span>
                </div>
                <span class="rt-speed-label">Full</span>
            </div>
            
            <div class="rt-speed-box rt-speed-charge">
                <i class="fas fa-running"></i>
                <div class="rt-speed-data">
                    <span class="rt-speed-value">{{system.movement.charge}}</span>
                    <span class="rt-speed-unit">m</span>
                </div>
                <span class="rt-speed-label">Charge</span>
            </div>
            
            <div class="rt-speed-box rt-speed-run">
                <i class="fas fa-wind"></i>
                <div class="rt-speed-data">
                    <span class="rt-speed-value">{{system.movement.run}}</span>
                    <span class="rt-speed-unit">m</span>
                </div>
                <span class="rt-speed-label">Run</span>
            </div>
        </div>

        {{!-- Expanded Details --}}
        <div class="rt-panel-details mobility_details" {{hideIfNot (isExpanded 'mobility_details' actor)}}>
            
            {{!-- Athletics Section --}}
            <div class="rt-mobility-section">
                <div class="rt-section-header">
                    <i class="fas fa-person-hiking"></i>
                    <span>Athletics</span>
                </div>
                <div class="rt-athletics-grid">
                    <div class="rt-athletic-stat">
                        <span class="rt-athletic-label">Leap Vertical</span>
                        <span class="rt-athletic-value">{{system.movement.leapVertical}}m</span>
                    </div>
                    <div class="rt-athletic-stat">
                        <span class="rt-athletic-label">Leap Horizontal</span>
                        <span class="rt-athletic-value">{{system.movement.leapHorizontal}}m</span>
                    </div>
                    <div class="rt-athletic-stat">
                        <span class="rt-athletic-label">Jump Height</span>
                        <span class="rt-athletic-value">{{system.movement.jump}}cm</span>
                    </div>
                </div>
            </div>

            {{!-- Carrying Capacity Section --}}
            <div class="rt-mobility-section">
                <div class="rt-section-header">
                    <i class="fas fa-weight-hanging"></i>
                    <span>Carrying Capacity</span>
                </div>
                <div class="rt-carrying-grid">
                    <div class="rt-carry-stat">
                        <span class="rt-carry-label">Lift</span>
                        <span class="rt-carry-value">{{system.lifting.lift}}<span class="rt-carry-unit">kg</span></span>
                    </div>
                    <div class="rt-carry-stat">
                        <span class="rt-carry-label">Carry</span>
                        <span class="rt-carry-value">{{system.lifting.carry}}<span class="rt-carry-unit">kg</span></span>
                    </div>
                    <div class="rt-carry-stat">
                        <span class="rt-carry-label">Push/Drag</span>
                        <span class="rt-carry-value">{{system.lifting.push}}<span class="rt-carry-unit">kg</span></span>
                    </div>
                </div>
            </div>

            {{!-- Size --}}
            <div class="rt-mobility-section rt-size-section">
                <div class="rt-section-header">
                    <i class="fas fa-arrows-alt"></i>
                    <span>Size</span>
                </div>
                <select name="system.size" data-dtype="String" class="rt-size-select">
                    <option value="miniscule" {{#if (eq system.size "miniscule")}}selected{{/if}}>Miniscule</option>
                    <option value="puny" {{#if (eq system.size "puny")}}selected{{/if}}>Puny</option>
                    <option value="scrawny" {{#if (eq system.size "scrawny")}}selected{{/if}}>Scrawny</option>
                    <option value="average" {{#if (eq system.size "average")}}selected{{/if}}>Average</option>
                    <option value="hulking" {{#if (eq system.size "hulking")}}selected{{/if}}>Hulking</option>
                    <option value="enormous" {{#if (eq system.size "enormous")}}selected{{/if}}>Enormous</option>
                    <option value="massive" {{#if (eq system.size "massive")}}selected{{/if}}>Massive</option>
                    <option value="immense" {{#if (eq system.size "immense")}}selected{{/if}}>Immense</option>
                </select>
            </div>

        </div>
    </div>
</div>
