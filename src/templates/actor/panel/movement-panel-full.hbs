{{!-- Movement & Physical Panel - Modern Dynamic Design --}}

<div class="rt-panel rt-panel-movement-full">
    <div class="rt-panel-header">
        <span class="rt-panel-title"><i class="fas fa-bolt"></i> Mobility</span>
    </div>
    <div class="rt-panel-body">
        
        {{!-- Speed Gauge - Hero Display --}}
        <div class="rt-speed-hero">
            <div class="rt-speed-gauge">
                <svg class="rt-gauge-ring" viewBox="0 0 120 120">
                    <circle class="rt-gauge-bg" cx="60" cy="60" r="52" />
                    <circle class="rt-gauge-fill" cx="60" cy="60" r="52" 
                            style="--gauge-percent: {{actor.movement.run}}" />
                </svg>
                <div class="rt-gauge-center">
                    <span class="rt-gauge-value">{{actor.movement.run}}</span>
                    <span class="rt-gauge-unit">m/rnd</span>
                    <span class="rt-gauge-label">Sprint</span>
                </div>
            </div>
            
            {{!-- Speed Tiers --}}
            <div class="rt-speed-tiers">
                <div class="rt-speed-tier rt-tier-walk" title="Half Action Movement">
                    <div class="rt-tier-bar">
                        <div class="rt-tier-fill" style="width: {{multiply (divide actor.movement.half actor.movement.run) 100}}%"></div>
                    </div>
                    <span class="rt-tier-value">{{actor.movement.half}}m</span>
                    <span class="rt-tier-label">Walk</span>
                </div>
                <div class="rt-speed-tier rt-tier-move" title="Full Action Movement">
                    <div class="rt-tier-bar">
                        <div class="rt-tier-fill" style="width: {{multiply (divide actor.movement.full actor.movement.run) 100}}%"></div>
                    </div>
                    <span class="rt-tier-value">{{actor.movement.full}}m</span>
                    <span class="rt-tier-label">Move</span>
                </div>
                <div class="rt-speed-tier rt-tier-charge" title="Charge Action">
                    <div class="rt-tier-bar">
                        <div class="rt-tier-fill" style="width: {{multiply (divide actor.movement.charge actor.movement.run) 100}}%"></div>
                    </div>
                    <span class="rt-tier-value">{{actor.movement.charge}}m</span>
                    <span class="rt-tier-label">Charge</span>
                </div>
                <div class="rt-speed-tier rt-tier-run" title="Run Action (Full Round)">
                    <div class="rt-tier-bar">
                        <div class="rt-tier-fill" style="width: 100%"></div>
                    </div>
                    <span class="rt-tier-value">{{actor.movement.run}}m</span>
                    <span class="rt-tier-label">Run</span>
                </div>
            </div>
        </div>
        
        {{!-- Athletics & Carry - Dual Column --}}
        <div class="rt-physical-grid">
            
            {{!-- Athletics Column --}}
            <div class="rt-physical-column rt-athletics-col">
                <div class="rt-column-header">
                    <i class="fas fa-person-running"></i>
                    <span>Athletics</span>
                </div>
                <div class="rt-metric-row">
                    <div class="rt-metric rt-metric-leap">
                        <i class="fas fa-arrow-up"></i>
                        <div class="rt-metric-data">
                            <span class="rt-metric-value">{{actor.movement.leapVertical}}m</span>
                            <span class="rt-metric-label">Leap Up</span>
                        </div>
                    </div>
                    <div class="rt-metric rt-metric-leap">
                        <i class="fas fa-arrows-left-right"></i>
                        <div class="rt-metric-data">
                            <span class="rt-metric-value">{{actor.movement.leapHorizontal}}m</span>
                            <span class="rt-metric-label">Leap Across</span>
                        </div>
                    </div>
                </div>
                <div class="rt-metric-row">
                    <div class="rt-metric rt-metric-jump">
                        <i class="fas fa-arrows-up-down"></i>
                        <div class="rt-metric-data">
                            <span class="rt-metric-value">{{actor.movement.jump}}cm</span>
                            <span class="rt-metric-label">Jump Height</span>
                        </div>
                    </div>
                </div>
            </div>
            
            {{!-- Carrying Column --}}
            <div class="rt-physical-column rt-carrying-col">
                <div class="rt-column-header">
                    <i class="fas fa-weight-hanging"></i>
                    <span>Carrying</span>
                </div>
                <div class="rt-carry-metrics">
                    <div class="rt-carry-item" title="Normal carrying capacity">
                        <span class="rt-carry-value">{{actor.lifting.carry}}</span>
                        <span class="rt-carry-unit">kg</span>
                        <span class="rt-carry-label">Carry</span>
                    </div>
                    <div class="rt-carry-item" title="Maximum lift capacity">
                        <span class="rt-carry-value">{{actor.lifting.lift}}</span>
                        <span class="rt-carry-unit">kg</span>
                        <span class="rt-carry-label">Lift</span>
                    </div>
                    <div class="rt-carry-item" title="Push/drag capacity">
                        <span class="rt-carry-value">{{actor.lifting.push}}</span>
                        <span class="rt-carry-unit">kg</span>
                        <span class="rt-carry-label">Push</span>
                    </div>
                </div>
                
                {{!-- Encumbrance Bar --}}
                <div class="rt-encumbrance-display {{#if actor.encumbrance.encumbered}}rt-over{{/if}}">
                    <div class="rt-enc-header">
                        <span class="rt-enc-current">{{actor.encumbrance.current}}</span>
                        <span class="rt-enc-separator">/</span>
                        <span class="rt-enc-max">{{actor.encumbrance.max}} kg</span>
                    </div>
                    <div class="rt-enc-track">
                        <div class="rt-enc-progress" style="width: {{encumbrancePercent}}%">
                            <div class="rt-enc-glow"></div>
                        </div>
                        <div class="rt-enc-markers">
                            <span class="rt-enc-mark" style="left: 50%"></span>
                            <span class="rt-enc-mark" style="left: 75%"></span>
                            <span class="rt-enc-mark rt-mark-danger" style="left: 100%"></span>
                        </div>
                    </div>
                </div>
            </div>
            
        </div>

    </div>
</div>
