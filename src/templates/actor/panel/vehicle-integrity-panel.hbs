<div class="rt-panel spacer rt-grid-col-2">
    <h1 class="rt-panel-header">
        <i class="fas fa-heart-broken"></i>
        {{localize "RT.Vehicle.Integrity"}}
    </h1>
    <div class="rt-integrity-display">
        <div class="rt-field__wrapper">
            <span class="rt-field__header">{{localize "RT.Vehicle.Integrity.Max"}}</span>
            <input type="number" data-dtype="Number" class="rt-field__input" 
                   name="system.integrity.max" value="{{system.integrity.max}}" />
        </div>
        <div class="rt-field__wrapper">
            <span class="rt-field__header">{{localize "RT.Vehicle.Integrity.Current"}}</span>
            <div class="rt-integrity-controls">
                <button class="rt-control-button" data-action="adjustIntegrity" data-delta="-1" title="Damage">
                    <i class="fas fa-minus"></i>
                </button>
                <input type="number" data-dtype="Number" class="rt-field__input" 
                       name="system.integrity.value" value="{{system.integrity.value}}" />
                <button class="rt-control-button" data-action="adjustIntegrity" data-delta="1" title="Repair">
                    <i class="fas fa-plus"></i>
                </button>
            </div>
        </div>
        <div class="rt-field__wrapper">
            <span class="rt-field__header">{{localize "RT.Vehicle.Integrity.Critical"}}</span>
            <input type="number" data-dtype="Number" class="rt-field__input" 
                   name="system.integrity.critical" value="{{system.integrity.critical}}" />
        </div>
        {{#if actor.system.isDamaged}}
        <div class="rt-integrity-status rt-status-damaged">
            <i class="fas fa-exclamation-triangle"></i>
            {{localize "RT.Vehicle.Status.Damaged"}} ({{system.integrityPercentage}}%)
        </div>
        {{/if}}
        {{#if actor.system.isDestroyed}}
        <div class="rt-integrity-status rt-status-destroyed">
            <i class="fas fa-skull-crossbones"></i>
            {{localize "RT.Vehicle.Status.Destroyed"}}
        </div>
        {{/if}}
    </div>
</div>
