<div class="dh-panel spacer dh-grid-col-6 dh-grid-row-1">
    <h1 class="dh-panel__header">{{localize "RT.RogueTrader.AcquisitionsHeader"}}</h1>
    <div class="dh-table--border dh-weaponmodtable--border">
        <div class="table-row--head">
            <div class="table-cell--span2">{{localize "RT.RogueTrader.AcquisitionName"}}</div>
            <div class="table-cell">{{localize "RT.RogueTrader.AcquisitionAvailability"}}</div>
            <div class="table-cell">{{localize "RT.RogueTrader.AcquisitionModifier"}}</div>
            <div class="table-cell">{{localize "RT.RogueTrader.AcquisitionAcquired"}}</div>
            <div class="table-cell--span2">{{localize "RT.RogueTrader.AcquisitionNotes"}}</div>
            <div class="table-cell--last">
                <label class="dh-control-button acquisition-add">
                    <span class="dh-control-button__span material-icons">{{defaultVal icon 'add_circle'}}</span>
                </label>
            </div>
        </div>
        {{#each system.rogueTrader.acquisitions as | acquisition index |}}
            <div class="table-row">
                <div class="table-cell--span2">
                    <input class="dh-field__input" type="text" name="system.rogueTrader.acquisitions.{{index}}.name" value="{{acquisition.name}}" />
                </div>
                <div class="table-cell">
                    <input class="dh-field__input" type="text" name="system.rogueTrader.acquisitions.{{index}}.availability" value="{{acquisition.availability}}" />
                </div>
                <div class="table-cell">
                    <input class="dh-field__input" type="number" data-dtype="Number" name="system.rogueTrader.acquisitions.{{index}}.modifier" value="{{acquisition.modifier}}" />
                </div>
                <div class="table-cell">
                    <input class="dh-field__input" type="checkbox" data-dtype="Boolean" name="system.rogueTrader.acquisitions.{{index}}.acquired" {{checked acquisition.acquired}} />
                </div>
                <div class="table-cell--span2">
                    <input class="dh-field__input" type="text" name="system.rogueTrader.acquisitions.{{index}}.notes" value="{{acquisition.notes}}" />
                </div>
                <div class="table-cell--last">
                    <label class="dh-control-button acquisition-remove" data-index="{{index}}">
                        <span class="dh-control-button__span material-icons">{{defaultVal icon 'delete'}}</span>
                    </label>
                </div>
            </div>
        {{/each}}
    </div>
</div>

