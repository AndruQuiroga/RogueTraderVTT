<div class="rt-panel spacer rt-grid-col-6 rt-grid-row-1">
    <div class="rt-panel-header-flex">
        <h1 class="rt-panel-header">{{localize "RT.RogueTrader.AcquisitionsHeader"}}</h1>
        <button type="button" class="rt-add-item-btn acquisition-add">
            <i class="fas fa-plus"></i> Add Acquisition
        </button>
    </div>
    <div class="rt-acquisitions-list">
        {{#each system.rogueTrader.acquisitions as | acquisition index |}}
        <div class="rt-acquisition-card {{#if acquisition.acquired}}rt-acquisition-acquired{{/if}}">
            <div class="rt-acquisition-header">
                <input class="rt-acquisition-name" type="text" name="system.rogueTrader.acquisitions.{{index}}.name" value="{{acquisition.name}}" placeholder="Acquisition Name" />
                <label class="rt-acquisition-check">
                    <input type="checkbox" data-dtype="Boolean" name="system.rogueTrader.acquisitions.{{index}}.acquired" {{checked acquisition.acquired}} />
                    <span class="rt-check-label">{{#if acquisition.acquired}}Acquired{{else}}Pending{{/if}}</span>
                </label>
            </div>
            <div class="rt-acquisition-stats">
                <div class="rt-acquisition-stat">
                    <span class="rt-stat-label">Availability</span>
                    <input class="rt-stat-value" type="text" name="system.rogueTrader.acquisitions.{{index}}.availability" value="{{acquisition.availability}}" placeholder="â€”" />
                </div>
                <div class="rt-acquisition-stat">
                    <span class="rt-stat-label">Modifier</span>
                    <input class="rt-stat-value rt-stat-number" type="number" data-dtype="Number" name="system.rogueTrader.acquisitions.{{index}}.modifier" value="{{acquisition.modifier}}" placeholder="0" />
                </div>
            </div>
            <div class="rt-acquisition-notes">
                <input class="rt-notes-input" type="text" name="system.rogueTrader.acquisitions.{{index}}.notes" value="{{acquisition.notes}}" placeholder="Notes..." />
            </div>
            <button type="button" class="rt-acquisition-delete acquisition-remove" data-index="{{index}}" title="Delete Acquisition">
                <i class="fas fa-trash"></i>
            </button>
        </div>
        {{/each}}
    </div>
</div>

