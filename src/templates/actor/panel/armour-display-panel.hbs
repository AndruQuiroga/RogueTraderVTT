{{!-- Armour Display Panel - Character Body Silhouette Layout --}}
<div class="rt-panel rt-armour-panel">
    <div class="rt-panel-header">
        <span class="rt-panel-title"><i class="fas fa-shield-alt"></i> Armour Points</span>
    </div>
    <div class="rt-panel-body">
        <div class="rt-armour-silhouette">
            {{!-- Head (centered at top) --}}
            <div class="rt-armour-box rt-box-head" 
                 data-location="head" 
                 data-roll-min="1" 
                 data-roll-max="10"
                 title="Head - Roll: 01-10">
                <span class="rt-box-label">Head</span>
                <span class="rt-box-ap">{{system.armour.head.total}}</span>
                <button 
                    type="button" 
                    class="rt-stat-breakdown-btn rt-stat-breakdown-btn--tiny"
                    data-action="showStatBreakdown"
                    data-stat-key="armour.head"
                    title="Show armour breakdown">
                    <i class="fa-solid fa-calculator"></i>
                </button>
                <span class="rt-box-range">01-10</span>
            </div>
            
            {{!-- Right Arm (left side of screen, character's right) --}}
            <div class="rt-armour-box rt-box-right-arm" 
                 data-location="rightArm" 
                 data-roll-min="11" 
                 data-roll-max="20"
                 title="Right Arm - Roll: 11-20">
                <span class="rt-box-label">R.Arm</span>
                <span class="rt-box-ap">{{system.armour.rightArm.total}}</span>
                <button 
                    type="button" 
                    class="rt-stat-breakdown-btn rt-stat-breakdown-btn--tiny"
                    data-action="showStatBreakdown"
                    data-stat-key="armour.rightArm"
                    title="Show armour breakdown">
                    <i class="fa-solid fa-calculator"></i>
                </button>
                <span class="rt-box-range">11-20</span>
            </div>
            
            {{!-- Left Arm (right side of screen, character's left) --}}
            <div class="rt-armour-box rt-box-left-arm" 
                 data-location="leftArm" 
                 data-roll-min="21" 
                 data-roll-max="30"
                 title="Left Arm - Roll: 21-30">
                <span class="rt-box-label">L.Arm</span>
                <span class="rt-box-ap">{{system.armour.leftArm.total}}</span>
                <button 
                    type="button" 
                    class="rt-stat-breakdown-btn rt-stat-breakdown-btn--tiny"
                    data-action="showStatBreakdown"
                    data-stat-key="armour.leftArm"
                    title="Show armour breakdown">
                    <i class="fa-solid fa-calculator"></i>
                </button>
                <span class="rt-box-range">21-30</span>
            </div>
            
            {{!-- Body (center, largest box) --}}
            <div class="rt-armour-box rt-box-body" 
                 data-location="body" 
                 data-roll-min="31" 
                 data-roll-max="70"
                 title="Body - Roll: 31-70">
                <span class="rt-box-label">Body</span>
                <span class="rt-box-ap">{{system.armour.body.total}}</span>
                <button 
                    type="button" 
                    class="rt-stat-breakdown-btn rt-stat-breakdown-btn--tiny"
                    data-action="showStatBreakdown"
                    data-stat-key="armour.body"
                    title="Show armour breakdown">
                    <i class="fa-solid fa-calculator"></i>
                </button>
                <span class="rt-box-range">31-70</span>
            </div>
            
            {{!-- Right Leg (left side of screen, character's right) --}}
            <div class="rt-armour-box rt-box-right-leg" 
                 data-location="rightLeg" 
                 data-roll-min="71" 
                 data-roll-max="85"
                 title="Right Leg - Roll: 71-85">
                <span class="rt-box-label">R.Leg</span>
                <span class="rt-box-ap">{{system.armour.rightLeg.total}}</span>
                <button 
                    type="button" 
                    class="rt-stat-breakdown-btn rt-stat-breakdown-btn--tiny"
                    data-action="showStatBreakdown"
                    data-stat-key="armour.rightLeg"
                    title="Show armour breakdown">
                    <i class="fa-solid fa-calculator"></i>
                </button>
                <span class="rt-box-range">71-85</span>
            </div>
            
            {{!-- Left Leg (right side of screen, character's left) --}}
            <div class="rt-armour-box rt-box-left-leg" 
                 data-location="leftLeg" 
                 data-roll-min="86" 
                 data-roll-max="100"
                 title="Left Leg - Roll: 86-00">
                <span class="rt-box-label">L.Leg</span>
                <span class="rt-box-ap">{{system.armour.leftLeg.total}}</span>
                <button 
                    type="button" 
                    class="rt-stat-breakdown-btn rt-stat-breakdown-btn--tiny"
                    data-action="showStatBreakdown"
                    data-stat-key="armour.leftLeg"
                    title="Show armour breakdown">
                    <i class="fa-solid fa-calculator"></i>
                </button>
                <span class="rt-box-range">86-00</span>
            </div>
        </div>
    </div>
</div>
