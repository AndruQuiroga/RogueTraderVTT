<div class="rt-panel rt-armour-panel rt-grid-col-2 rt-grid-row-3">
    <div class="rt-panel-header">
        <span class="rt-panel-title"><i class="fas fa-shield-alt"></i> Armour Points</span>
        <button type="button" class="rt-header-btn rt-hit-location-roll" title="Roll Hit Location (1d100)">
            <i class="fas fa-dice-d20"></i>
        </button>
    </div>
    <div class="rt-panel-body">
        <div class="rt-armour-grid">
            <div class="rt-armour-slot rt-armour-head" data-location="head" data-roll-min="1" data-roll-max="10">
                <div class="rt-armour-label">Head</div>
                <div class="rt-armour-value">{{actor.armour.head.total}}</div>
                <div class="rt-armour-roll-band">01-10</div>
            </div>
            
            <div class="rt-armour-row rt-body-row">
                <div class="rt-armour-slot rt-armour-left-arm" data-location="leftArm" data-roll-min="21" data-roll-max="30">
                    <div class="rt-armour-label">L Arm</div>
                    <div class="rt-armour-value">{{actor.armour.leftArm.total}}</div>
                    <div class="rt-armour-roll-band">21-30</div>
                </div>
                <div class="rt-armour-slot rt-armour-body" data-location="body" data-roll-min="31" data-roll-max="70">
                    <div class="rt-armour-label">Body</div>
                    <div class="rt-armour-value">{{actor.armour.body.total}}</div>
                    <div class="rt-armour-roll-band">31-70</div>
                </div>
                <div class="rt-armour-slot rt-armour-right-arm" data-location="rightArm" data-roll-min="11" data-roll-max="20">
                    <div class="rt-armour-label">R Arm</div>
                    <div class="rt-armour-value">{{actor.armour.rightArm.total}}</div>
                    <div class="rt-armour-roll-band">11-20</div>
                </div>
            </div>
            
            <div class="rt-armour-row rt-legs-row">
                <div class="rt-armour-slot rt-armour-left-leg" data-location="leftLeg" data-roll-min="86" data-roll-max="100">
                    <div class="rt-armour-label">L Leg</div>
                    <div class="rt-armour-value">{{actor.armour.leftLeg.total}}</div>
                    <div class="rt-armour-roll-band">86-00</div>
                </div>
                <div class="rt-armour-slot rt-armour-right-leg" data-location="rightLeg" data-roll-min="71" data-roll-max="85">
                    <div class="rt-armour-label">R Leg</div>
                    <div class="rt-armour-value">{{actor.armour.rightLeg.total}}</div>
                    <div class="rt-armour-roll-band">71-85</div>
                </div>
            </div>
        </div>
    </div>
</div>
