{{!-- Vehicle Crew Panel --}}
<div class="rt-panel spacer rt-grid-col-2">
    <h1 class="rt-panel-header">
        <i class="fas fa-users"></i>
        {{localize "RT.Vehicle.Crew"}}
    </h1>
    <div class="rt-crew-info">
        <div class="rt-field__wrapper">
            <span class="rt-field__header">{{localize "RT.Vehicle.Crew.Required"}}</span>
            <input type="number" data-dtype="Number" class="rt-field__input" 
                   name="system.crew.required" value="{{actor.system.crew.required}}" 
                   min="0" placeholder="1" />
        </div>
        <div class="rt-field__wrapper">
            <span class="rt-field__header">{{localize "RT.Vehicle.Passengers"}}</span>
            <input type="number" data-dtype="Number" class="rt-field__input" 
                   name="system.passengers" value="{{actor.system.passengers}}" 
                   min="0" placeholder="0" />
        </div>
        <div class="rt-field__wrapper rt-field__full">
            <span class="rt-field__header">{{localize "RT.Vehicle.Crew.Notes"}}</span>
            <textarea class="rt-field__textarea" name="system.crew.notes" 
                      rows="3" placeholder="Crew positions, roles, requirements...">{{actor.system.crew.notes}}</textarea>
        </div>
    </div>
</div>
