<div class="rt-panel rt-profit-panel spacer rt-grid-col-3 rt-grid-row-1">
    <h1 class="rt-panel-header">{{localize "RT.ProfitFactor.Header"}}</h1>
    <div class="rt-profit-factor-display">
        <div class="rt-profit-main">
            <div class="rt-profit-field">
                <span class="rt-profit-label">{{localize "RT.ProfitFactor.Starting"}}</span>
                <input type="number" data-dtype="Number" class="rt-profit-input" name="system.rogueTrader.profitFactor.starting" value="{{system.rogueTrader.profitFactor.starting}}" />
            </div>
            <div class="rt-profit-field rt-profit-current-field">
                <span class="rt-profit-label">{{localize "RT.ProfitFactor.Current"}}</span>
                <input type="number" data-dtype="Number" class="rt-profit-input rt-profit-current-value" name="system.rogueTrader.profitFactor.current" value="{{system.rogueTrader.profitFactor.current}}" />
            </div>
        </div>
        <div class="rt-profit-notes">
            <span class="rt-profit-label">{{localize "RT.ProfitFactor.Misfortunes"}}</span>
            <textarea class="rt-profit-textarea" name="system.rogueTrader.profitFactor.misfortunes" rows="3" placeholder="Misfortunes and complications...">{{system.rogueTrader.profitFactor.misfortunes}}</textarea>
        </div>
    </div>
</div>
