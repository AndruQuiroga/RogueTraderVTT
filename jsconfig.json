{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ES2022",
    "moduleResolution": "bundler",
    "checkJs": true,
    "noEmit": true,
    "strict": false,
    "skipLibCheck": true,
    "allowJs": true,
    "esModuleInterop": true
  },
  "include": ["src/**/*.mjs", "src/**/*.js"],
  "exclude": ["node_modules", "dist", "packs", "**/*.test.js"]
}
